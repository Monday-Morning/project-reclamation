{
  "name": "project-reclamation",
  "version": "0.1.0",
  "description": "The Server Application for Monday Morning under Project Infinity",
  "main": "app.js",
  "scripts": {
    "start": "npx pm2 startOrGracefulReload ecosystem.config.js --env development --no-autorestart --node-args=\"--inspect-brk\" && npx pm2 logs --lines 0",
    "start:stage": "npx pm2 startOrGracefulReload ecosystem.config.js --env staging",
    "start:prod": "npx pm2-runtime ecosystem.config.js --env production",
    "stop": "npx pm2 stop ecosystem.config.js && npx pm2 delete ecosystem.config.js",
    "restart": "npx pm2 restart ecosystem.config.js",
    "pm2:list": "npx pm2 list",
    "logs": "npx pm2 logs --lines 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Monday-Morning/project-reclamation.git"
  },
  "keywords": [
    "monday",
    "morning",
    "project",
    "reclamation",
    "infinity",
    "server",
    "node",
    "nodejs",
    "js",
    "express",
    "mongo",
    "mongodb",
    "fb",
    "firebase",
    "graphql",
    "rest",
    "api"
  ],
  "author": "MM Tech Team 2020-21",
