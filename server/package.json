  "dependencies": {
    "@graphql-tools/stitch": "^8.3.1",
    "apollo-server-core": "^3.4.0",
    "apollo-server-express": "^3.4.0",
    "connect-mongodb-session": "^3.1.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "firebase-admin": "^9.3.0",
    "graphql": "^15.4.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-type-json": "^0.3.2",
    "mongoose": "^6.0.11",
    "nodemailer": "^6.5.0",
    "pm2": "^5.1.2",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
